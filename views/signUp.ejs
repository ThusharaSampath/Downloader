<body class="bg-1" style="color: white;">


  <div class="main">
    <div class="col-md-6 col-sm-12">
      <div class="signUp-form">

        <div class="form-group">
          <label>Email</label>
          <input id="email" type="text" class="form-control bg-2" placeholder="Sherlockholems@gmail.com">
        </div>

        <div class="form-group">
          <label>First Name</label>
          <input id="fname" type="text" class="form-control bg-2" placeholder="Sherlock">
        </div>

        <div class="form-group">
          <label>Last Name</label>
          <input id="lname" type="text" class="form-control bg-2" placeholder="Holmes">
        </div>

        <div class="form-group">
          <label>Telephone Number</label>
          <input id="tp" type="text" class="form-control bg-2" placeholder="07********">
        </div>

        <div class="form-group">
          <label>Password</label>
          <input id="password" type="password" class="form-control bg-2" placeholder="Password">
        </div>

        

        <button id="login" class="btn btn-secondary" onclick="location.href = '/login';" style="background: rgb(107, 1, 107);">LogIn</button>
        <button class="btn btn-secondary" id=signup onclick='signUp()' style="background: rgb(71, 2, 71);">Sign Up</button>

      </div>
    </div>
  
  </div>
  

  <div class="sidenav bg">
    <svg viewBox="0 0 960 300">
      <symbol id="s-text">
        <text text-anchor="middle" x="50%" y="80%">Welcome</text>
      </symbol>

      <g class="g-ants">
        <use xlink:href="#s-text" class="text-copy"></use>
        <use xlink:href="#s-text" class="text-copy"></use>
        <use xlink:href="#s-text" class="text-copy"></use>
        <use xlink:href="#s-text" class="text-copy"></use>
        <use xlink:href="#s-text" class="text-copy"></use>
      </g>
    </svg>
  </div>

</body>